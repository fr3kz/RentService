@model RentService.Models.Forms.RegisterModel
@{
ViewData["Title"] = "Rejestracja";
Layout = "_Layout";
}

<div class="flex items-center justify-center min-h-screen">
    <div class="max-w-md w-full bg-gray-800 rounded-xl shadow-2xl border border-gray-700 overflow-hidden">
        <div class="p-8">
            <h2 class="text-3xl font-bold text-center text-white mb-6 tracking-tight">Zarejestruj się</h2>

            <form method="post" class="space-y-6">
                @* Ogólne błędy formularza *@
                @if (!ViewData.ModelState.IsValid)
                {
                <div class="rounded-md bg-red-500/10 p-4 border border-red-500">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" fill="none"
                                 viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M12 8v4m0 4h.01M21 12A9 9 0 113 12a9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">
                                Wystąpił błąd
                            </h3>
                            <div class="mt-2 text-sm text-red-700">
                                @Html.ValidationSummary(excludePropertyErrors: true, message: null)
                            </div>
                        </div>
                    </div>
                </div>
                }

                <div>
                    <label for="Email" class="block text-sm font-medium text-gray-300 mb-2">Adres Email</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                            </svg>
                        </div>
                        <input type="email"
                               id="Email"
                               name="Email"
                               value="@Model.Email"
                               class="block w-full pl-10 pr-3 py-2 border border-gray-700 rounded-md bg-gray-900 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300"
                               placeholder="twoj@email.com"
                               required />
                    </div>
                    <span class="text-red-400 text-sm mt-1">
                        @Html.ValidationMessageFor(model => model.Email)
                    </span>
                </div>

                <div>
                    <label for="Imie" class="block text-sm font-medium text-gray-300 mb-2">Imię</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <input type="text"
                               id="Imie"
                               name="Imie"
                               value="@Model.Imie"
                               class="block w-full pl-10 pr-3 py-2 border border-gray-700 rounded-md bg-gray-900 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300"
                               placeholder="Twoje imię"
                               required />
                    </div>
                    <span class="text-red-400 text-sm mt-1">
                        @Html.ValidationMessageFor(model => model.Imie)
                    </span>
                </div>

                <div>
                    <label for="Nazwisko" class="block text-sm font-medium text-gray-300 mb-2">Nazwisko</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <input type="text"
                               id="Nazwisko"
                               name="Nazwisko"
                               value="@Model.Nazwisko"
                               class="block w-full pl-10 pr-3 py-2 border border-gray-700 rounded-md bg-gray-900 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300"
                               placeholder="Twoje nazwisko"
                               required />
                    </div>
                    <span class="text-red-400 text-sm mt-1">
                        @Html.ValidationMessageFor(model => model.Nazwisko)
                    </span>
                </div>

                <div>
                    <label for="Password" class="block text-sm font-medium text-gray-300 mb-2">Hasło</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <input type="password"
                               id="Password"
                               name="Password"
                               class="block w-full pl-10 pr-3 py-2 border border-gray-700 rounded-md bg-gray-900 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300"
                               placeholder="••••••••"
                               required />
                    </div>
                    <span class="text-red-400 text-sm mt-1">
                        @Html.ValidationMessageFor(model => model.Password)
                    </span>
                </div>

                <div>
                    <label for="ConfirmPassword" class="block text-sm font-medium text-gray-300 mb-2">Potwierdź hasło</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <input type="password"
                               id="ConfirmPassword"
                               name="ConfirmPassword"
                               class="block w-full pl-10 pr-3 py-2 border border-gray-700 rounded-md bg-gray-900 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300"
                               placeholder="••••••••"
                               required />
                    </div>
                    <span class="text-red-400 text-sm mt-1">
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </span>
                </div>

                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300 transform hover:scale-105">
                        Zarejestruj się
                    </button>
                </div>
            </form>

            <div class="mt-6 text-center">
                <p class="text-sm text-gray-400">
                    Masz już konto?
                    <a href="/Account/Login" class="font-medium text-blue-400 hover:text-blue-300">
                        Zaloguj się
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}