@model RentService.Models.Forms.LoginModel
@{
ViewData["Title"] = "Logowanie";
Layout = "_Layout";
}

<div class="flex items-center justify-center min-h-screen">
    <div class="max-w-md w-full bg-gray-800 rounded-xl shadow-2xl border border-gray-700 overflow-hidden">
        <div class="p-8">
            <h2 class="text-3xl font-bold text-center text-white mb-6 tracking-tight">Zaloguj się</h2>

            <form method="post" class="space-y-6">
                @* Ogólne błędy formularza (np. błędne dane logowania) *@
                @if (!ViewData.ModelState.IsValid)
                {
                <div class="rounded-md bg-red-500/10 p-4 border border-red-500">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" fill="none"
                                 viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M12 8v4m0 4h.01M21 12A9 9 0 113 12a9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">
                                Wystąpił błąd
                            </h3>
                            <div class="mt-2 text-sm text-red-700">
                                @Html.ValidationSummary(excludePropertyErrors: true, message: null)
                            </div>
                        </div>
                    </div>
                </div>
                }
                <div>
                    <label for="Email" class="block text-sm font-medium text-gray-300 mb-2">Adres Email</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                            </svg>
                        </div>
                        <input type="email"
                               id="Email"
                               name="Email"
                               value="@Model.Email"
                               class="block w-full pl-10 pr-3 py-2 border border-gray-700 rounded-md bg-gray-900 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300"
                               placeholder="twoj@email.com"
                               required />
                    </div>
                    <span class="text-red-400 text-sm mt-1">
                        @Html.ValidationMessageFor(model => model.Email)
                    </span>
                </div>

                <div>
                    <label for="Password" class="block text-sm font-medium text-gray-300 mb-2">Hasło</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <input type="password"
                               id="Password"
                               name="Password"
                               class="block w-full pl-10 pr-3 py-2 border border-gray-700 rounded-md bg-gray-900 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300"
                               placeholder="••••••••"
                               required />
                    </div>
                    <span class="text-red-400 text-sm mt-1">
                        @Html.ValidationMessageFor(model => model.Password)
                    </span>
                </div>

                <div class="flex items-center">
                    <input type="checkbox"
                           id="RememberMe"
                           name="RememberMe"
                           @(Model.RememberMe ? "checked" : "")
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-700 rounded bg-gray-900" />
                    <label for="RememberMe" class="ml-2 block text-sm text-gray-300">
                        Zapamiętaj mnie
                    </label>
                </div>

                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300 transform hover:scale-105">
                        Zaloguj się
                    </button>
                </div>
            </form>

            <div class="mt-6 text-center">
                <a href="#" class="text-sm text-blue-400 hover:text-blue-300 transition duration-300">
                    Zapomniałeś hasła?
                </a>
                <p class="mt-2 text-sm text-gray-400">
                    Nie masz konta?
                    <a href="/Account/Register" class="font-medium text-blue-400 hover:text-blue-300">
                        Zarejestruj się
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}